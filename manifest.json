{
  "manifest_version": 3,
  "name": "URL Context Notes",
  "version": "2.0",
  "permissions": ["sidePanel", "storage", "tabs", "contextMenus"],
  "host_permissions": ["<all_urls>", "https://api.notion.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_ui": {
    "page": "dashboard.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Notizen Ã¶ffnen"
  },
  "icons": {
    "128": "icon.png"
  }
}